{
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always"
  },
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "cSpell.words": [
    "Casola",
    "dotenv",
    "eslintcache",
    "jscoverage",
    "jspm",
    "Luca",
    "Microbundle",
    "nuxt",
    "pids",
    "stylelintcache",
    "vuepress",
    "wscript"
  ]
}